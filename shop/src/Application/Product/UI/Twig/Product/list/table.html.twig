<style>
    .table {
        display: flex;
        flex-direction: column;
        width: 100%;
        border: 1px solid #ccc;
    }
    .row {
        display: flex;
        border-bottom: 1px solid #ccc;
        padding: 10px;
        align-items: center;
    }
    .cell {
        flex: 1;
        padding: 5px;
    }
    .image {
        width: 50px;
        height: 50px;
        background-color: #f3f3f3;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .actions {
        display: flex;
        gap: 10px;
    }
    .btn {
        padding: 5px 10px;
        cursor: pointer;
        border: none;
        border-radius: 4px;
    }
    .edit {
        background-color: #4CAF50;
        color: white;
    }
    .delete {
        background-color: #f44336;
        color: white;
    }
</style>

<div class="table">
    {% for product in products %}
        <div class="row" id="product_list">
            <div class="cell image"><img src="placeholder.jpg" alt="Zdjęcie" width="50"></div>
            <div class="cell">{{ product.name }}</div>
            <div class="cell">Opis produktu...</div>
            <div class="cell">99.99 zł</div>
            <div class="cell">Elektronika</div>
            <div class="cell">Tak</div>
            <div class="cell">Kolor: Czarny</div>
            <div class="cell actions">
                <button class="btn edit">Edytuj</button>
                <button class="btn delete">Usuń</button>
            </div>
        </div>
    {% else %}
        <div class="row no-data">
            <div class="cell" colspan="8">Brak danych</div>
        </div>
    {% endfor %}
</div>
